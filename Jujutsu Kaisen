import random
import time

# Introdução ao jogo
def introducao():
    print("Bem-vindo ao Jogo de Expansões de Domínio!")
    time.sleep(2)
    print("Baseado no universo de Jujutsu Kaisen, você controlará um feiticeiro que utilizará Expansões de Domínio.")
    print("Você enfrentará adversários poderosos e deverá fazer escolhas estratégicas para sobreviver e vencer.")
    time.sleep(2)
    input("Pressione Enter para começar...")

# Escolha de personagem e explicação das expansões
def escolha_personagem():
    print("\nEscolha seu personagem:")
    print("1. Gojo Satoru (Impenetrável Prisão Infinita)")
    print("2. Mahito (Câmara de Necrose Mortal)")
    print("3. Jogo (Funeral de Ferro Antigo)")
    print("4. Sukuna (Mausoléu da Morte)")
    print("5. Megumi Fushiguro (Túmulo de Xoguns)")

    escolha = int(input("Digite o número do personagem que deseja jogar: "))
    if escolha == 1:
        return "Gojo Satoru", "Impenetrável Prisão Infinita"
    elif escolha == 2:
        return "Mahito", "Câmara de Necrose Mortal"
    elif escolha == 3:
        return "Jogo", "Funeral de Ferro Antigo"
    elif escolha == 4:
        return "Sukuna", "Mausoléu da Morte"
    elif escolha == 5:
        return "Megumi Fushiguro", "Túmulo de Xoguns"
    else:
        print("Escolha inválida, tente novamente.")
        return escolha_personagem()

# Função para explicação das expansões
def explicacao_expansao(expansao):
    print(f"\nVocê escolheu a expansão de domínio: {expansao}")
    if expansao == "Impenetrável Prisão Infinita":
        print("Gojo cria uma barreira infinita onde o oponente é paralisado por sobrecarga sensorial. Ataques de alta precisão são desferidos.")
    elif expansao == "Câmara de Necrose Mortal":
        print("Mahito manipula diretamente a alma de quem estiver no seu domínio, destruindo-o física e emocionalmente.")
    elif expansao == "Funeral de Ferro Antigo":
        print("Jogo cria um vulcão ativo, onde magma e rochas em alta temperatura destroem tudo no caminho.")
    elif expansao == "Mausoléu da Morte":
        print("Sukuna ativa um domínio cheio de cortes e maldições destrutivas que despedaçam o oponente.")
    elif expansao == "Túmulo de Xoguns":
        print("Megumi invoca shikigamis que atacam com precisão e em conjunto, dominando o campo de batalha.")

    time.sleep(3)

# Função para uma batalha
def batalha(expansao, oponente):
    print(f"\nVocê está enfrentando {oponente}. Prepare-se para a batalha!")
    time.sleep(2)
    print("O oponente está atacando...")
    
    vitoria = False

    # Mecânica de batalha simples usando randomização
    while not vitoria:
        acao = input("\nEscolha sua ação: (1) Ativar Expansão de Domínio, (2) Defender, (3) Ataque básico: ")
        
        if acao == "1":
            print(f"\nVocê ativa sua Expansão de Domínio: {expansao}!")
            time.sleep(2)
            if expansao == "Impenetrável Prisão Infinita":
                print("O inimigo é completamente paralisado pela sobrecarga sensorial!")
                vitoria = True
            elif expansao == "Câmara de Necrose Mortal":
                print("O inimigo tem sua alma distorcida e destruída!")
                vitoria = True
            elif expansao == "Funeral de Ferro Antigo":
                print("O vulcão entra em erupção, queimando o inimigo por completo!")
                vitoria = True
            elif expansao == "Mausoléu da Morte":
                print("Cortes aparecem em todo o corpo do inimigo, destruindo-o sem chance de escapar!")
                vitoria = True
            elif expansao == "Túmulo de Xoguns":
                print("Os shikigamis atacam o inimigo simultaneamente, derrotando-o!")
                vitoria = True
        elif acao == "2":
            print("Você defende o ataque do inimigo e se prepara para o próximo movimento.")
        elif acao == "3":
            if random.choice([True, False]):
                print("Você acerta o ataque básico no inimigo!")
            else:
                print("O inimigo bloqueia seu ataque!")
        else:
            print("Escolha inválida, tente novamente.")

    print(f"\nVocê derrotou {oponente} com sucesso!")
    time.sleep(2)

# Função principal do jogo
def jogo_expansoes():
    introducao()
    personagem, expansao = escolha_personagem()
    explicacao_expansao(expansao)
    
    adversarios = ["Suguru Geto", "Hanami", "Dagon", "Choso"]
    
    for adversario in adversarios:
        batalha(expansao, adversario)
    
    print("\nParabéns! Você derrotou todos os adversários com sua expansão de domínio.")

# Execução do jogo
jogo_expansoes()
